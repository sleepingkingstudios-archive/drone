-# app/views/recruiters/_form.html.haml

= form_for recruiter do |form|
  %p
    = form.label :name
    = form.text_field :name

  %p
    = form.label :agency
    = form.text_field :agency

  %p
    = form.label :email
    = form.text_field :email

  %p
    = form.label :phone_number
    = form.text_field :phone_number

  %p
    = link_to "Cancel", roles_path
    = form.submit
